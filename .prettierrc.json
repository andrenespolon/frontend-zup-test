{
	"tabWidth": 2,
	"semi": true,
	"useTabs": true,
	"printWidth": 80,
	"singleQuote": true,
	"jsxSingleQuote": true,
	"trailingComma": "es5",
	"bracketSpacing": true,
	"bracketSameLine": false,
	"arrowParens": "avoid",
	"proseWrap": "always",
	"endOfLine": "lf",
	"overrides": [
		{
			"files": [".prettierrc", ".eslintrc", "tsconfig"],
			"options": {
				"parser": "json"
			}
		},
		{
			"files": ["*.css"],
			"options": {
				"parser": "css",
				"proseWrap": "always",
				"printWidth": 80
			}
		}
	]
}
